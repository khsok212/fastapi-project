    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
              "app:app",  // 'app' 폴더에서 FastAPI 객체 가져오기
              "--reload"
            ],
            "cwd": "${workspaceFolder}",  // 작업 디렉토리를 프로젝트 루트로 설정
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": true
          }
          
    ]
}